<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CTPcalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar"> DayNight.NoActionBar
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_accent</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
    </style>

    <style name="textCoeffStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textSize">@dimen/normalTextSize2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondaryStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/normalTextSize2</item>
    </style>

    <style name="bottomSheetTextHeading" parent="TextAppearance.AppCompat">  
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoeffBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="behavior_peekHeight">400dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
    </style>

</resources>