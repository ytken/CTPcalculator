<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CTPcalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge"> DayNight.NoActionBar
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_accent</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="textCoeffStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_accent</item>
        <item name="android:textSize">@dimen/normalTextSize2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondaryStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/normalTextSize2</item>
    </style>

    <style name="bottomSheetTextHeading" parent="TextAppearance.AppCompat">  
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headingInsurersActivity" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/headingInsurersText</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bankName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bankName</item>
        <item name="android:textColor">@color/Main_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="priceValue" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Main_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_peekHeight">400dp</item>
        <item name="colorPrimary">@color/blue_accent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounded_template_white</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/main_button_text_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_button_selector</item>
    </style>

</resources>