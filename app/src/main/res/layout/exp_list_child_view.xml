<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_sides">

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:layout_marginLeft="@dimen/padding_sides"
        android:textSize="@dimen/normalTextSize2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/secondary_text"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintStart_toEndOf="@+id/textViewHeading"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/description_text"
        android:layout_marginLeft="@dimen/padding_sides"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeading" />

    <TextView
        android:id="@+id/textViewCoefficient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:layout_marginRight="@dimen/padding_sides"
        android:layout_marginTop="14dp"
        android:textSize="@dimen/normalTextSize2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>