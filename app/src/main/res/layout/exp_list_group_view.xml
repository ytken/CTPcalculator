<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exp_list_group_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_sides">

    <ImageView
        android:id="@+id/imageViewIconCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/yourCoefficients"
        android:textSize="@dimen/smallTextSize"
        app:layout_constraintStart_toEndOf="@+id/imageViewIconCalculator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:text="БТ"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/imageViewIconCalculator"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        style="@style/textSecondaryStyle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/textViewBT"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КМ"
        android:layout_marginTop="2dp"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/textViewX1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textViewX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        style="@style/textSecondaryStyle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/textViewKM"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewKT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КТ"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/textViewX2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="2dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textViewX3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        style="@style/textSecondaryStyle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/textViewKT"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewKBM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КБМ"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/textViewX3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="2dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textViewX4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        style="@style/textSecondaryStyle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/textViewKBM"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewKO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КО"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/textViewX4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="2dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textViewX5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="×"
        style="@style/textSecondaryStyle"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/textViewKO"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewKVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КВС"
        style="@style/textCoeffStyle"
        app:layout_constraintStart_toEndOf="@+id/textViewX5"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="2dp"
        tools:layout_editor_absoluteY="34dp" />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_down" />

</androidx.constraintlayout.widget.ConstraintLayout>